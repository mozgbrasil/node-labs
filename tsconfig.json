{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"],
      "@controllers/*": ["./src/controllers/*"],
      "@models/*": ["./src/models/*"]
    },
    "resolveJsonModule": true
  },
  "include": ["src/**/*"]
}
