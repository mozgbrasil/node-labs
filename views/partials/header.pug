//- nav.navbar.navbar-expand-lg.navbar-light.bg-light.fixed-top
<header>
nav.navbar.navbar-expand-md.navbar-dark.mb-1
  .container
    .text-center
      a(href='/')
        img.d-inline-block.align-top(src='/images/logos/Russian_Army_Star.svg' width='50' alt='')
      p
        span.badge.bg-dark MOZG
    button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarScroll' aria-controls='navbarScroll' aria-expanded='false' aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarScroll.collapse.navbar-collapse
      ul.navbar-nav.me-auto.my-2.my-lg-0.navbar-nav-scroll(style='--bs-scroll-height: 100px;')
        li.nav-item(class=(title === 'Home') ? 'active' : undefined)
           a.nav-link(href='/', class=(title === 'Home') ? 'active' : undefined) Vis√£o geral
        li.nav-item(class=(title === 'API Examples') ? 'active' : undefined)
          a.nav-link(href='/api', class=(title === 'API Examples') ? 'active' : undefined) APIs
        li.nav-item(class=(title === 'Contact') ? 'active' : undefined)
          a.nav-link(href='/contact', class=(title === 'Contact') ? 'active' : undefined) Contato

        li.nav-item.dropdown(class=(title === 'airbnb') ? 'active' : undefined)
          a.nav-link.dropdown-toggle(href='#', data-bs-toggle='dropdown')
            | Projetos
            i.caret
          ul.dropdown-menu
            li
              a.dropdown-item(href='/airbnb', class=(title == '/airbnb') ? 'active' : undefined) MongoDB
        if user
          if user.profile.name == "stidata@gmail.com"
            li.dropdown-divider
            li
              a.dropdown-item(href='/stit/talent', class=(title == '/stit/talent') ? 'active' : undefined) STiT Data
            li
              a.dropdown-item(href='/products/STUFF A?tags=Practical') STiT Data / Products          
      ul.nav.navbar-nav
        if !user
          li.nav-item(class=(title === 'Login') ? 'active' : undefined)
            a.nav-link(href='/login', class=(title === 'Login') ? 'active' : undefined) Login
          li.nav-item(class=(title === 'Create Account') ? 'active' : undefined)
            a.nav-link(href='/signup', class=(title === 'Create Account') ? 'active' : undefined) Criar conta
        else
          li.nav-item.dropdown(class=(title === 'Account Management') ? 'active' : undefined)
            a.nav-link.dropdown-toggle(href='#', data-bs-toggle='dropdown', class=(title === 'Account Management') ? 'active' : undefined)
              if user.profile.picture
                img(src=user.profile.picture, alt=(user.profile.name || user.email || user.id))
              else
                img(src=user.gravatar(60), alt=(user.profile.name || user.email || user.id))
              span= user.profile.name || user.email || user.id
              i.caret
            ul.dropdown-menu
              li.nav-item
                a.dropdown-item(href='/account') My Account
              li.dropdown-divider
              li.nav-item
                a.dropdown-item(href='/logout') Logout
</header>
